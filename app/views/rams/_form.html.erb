<%= crud_form(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this ram from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.labeled_input_fields :capacity, :description, :serial_number, :in_repair%>
  <div class="labeled">
    <div class="caption"><%= f.label :machine %></div>
    <div class="value"><%= f.select(:machine, @a_machines, {:selected => "#{@entry.machine_type}_#{@entry.machine_id}", :prompt => 'Select Machine'}) %></div>
  </div>
<% end %>