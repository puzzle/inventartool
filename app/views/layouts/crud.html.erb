<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
  <%= yield :head %> 
</head>
<body>

<div id="container">
	<ul id="menu">
		<%= render :partial => 'layouts/menu' %>
	</ul>
	
	<h1><%= @title %></h1>
	
	<% if flash.notice.present? %>
		<div id="flash_notice"><%= flash.notice %></div>
	<% elsif flash.alert.present? %>
		<div id="flash_alert"><%= flash.alert %></div>
	<% end %>
	
	<div class="actions">
		<%= yield :actions %> 
	</div>
	
	<div id="content">
		<%= yield %>
	</div>
	<%= clear %>
	<div id="nav_bottom">
		<ul>
		<li><%= link_to "Dashboard", :controller => "dashboard" %></li>
		<li><%= link_to "Warranty", :warranty %></li>
		</ul>
	</div>
</div>

