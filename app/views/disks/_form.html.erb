<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this ram from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :serial_number %><br />
    <%= f.text_field :serial_number %>
  </div>
  <div class="field">
    <%= f.label :purchase_date %><br />
    <%= f.date_select :purchase_date %>
  </div>
  <div class="field">
    <%= f.label :warranty_duration %><br />
    <%= f.text_field :warranty_till %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity %>
  </div>
  <div class="field">
    <%= f.label :connector %><br />
    <%= f.text_field :connector %>
  </div>
  <div class="field">
    <%= f.label :distributor %><br />
    <%= f.collection_select(:distributor_id, @distributors, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :machine %><br />
 	<%= f.select(:machine, @a_machines, {:prompt => 'Select Machine'}) %>
  </div>

  <div class="field">
    <%= f.label :change_notice %><br />
    <%= f.text_field(:change_notice, :value => "" ) %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>