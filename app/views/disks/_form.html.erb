<%= crud_form(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this ram from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= f.labeled_input_fields :model, :serial_number, :purchase_date%>
  <div class="field">
    <%= f.label :warranty_duration %><br />
    <%= f.text_field :warranty_till %>
  </div>
  <%= f.labeled_input_fields :price, :notes, :capacity, :connector%>
   <div class="field">
    <%= f.label :distributor %><br />
    <%= f.collection_select(:distributor_id, @distributors, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :machine %><br />
    <%= f.select(:machine, @a_machines, {:prompt => 'Select Machine'}) %>
  </div>
  <%= f.labeled_input_fields :change_notice%>
<% end %>