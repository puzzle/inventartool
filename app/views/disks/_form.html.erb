<%= crud_form(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this ram from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= f.labeled_input_fields :model, :serial_number, :purchase_date %>
  <div class="labeled">
    <div class="caption"><%= f.label :warranty_duration %></div>
    <div class="value"><%= f.text_field :warranty_till %></div>
  </div>
  <%= f.labeled_input_fields :price, :notes, :capacity, :connector, :distributor, :in_repair %>
  <div class="labeled">
    <div class="caption"><%= f.label :machine %></div>
    <div class="value"><%= f.select(:machine, @a_machines, {:prompt => 'Select Machine'}) %></div>
  </div>
  <%= f.labeled_input_fields :change_notice%>
<% end %>