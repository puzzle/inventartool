<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this ram from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :serial_number %><br />
    <%= f.text_field :serial_number %>
  </div>
  <div class="field">
    <%= f.label :purchase_date %><br />
    <%= f.date_select :purchase_date %>
  </div>
  <div class="field">
    <%= f.label :warranty_till %><br />
    <%= f.date_select :warranty_till %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity %>
  </div>
  <div class="field">
    <%= f.label :connector %><br />
    <%= f.text_field :connector %>
  </div>
  <div class="field">
    <%= f.label :distributor %><br />
    <%= f.collection_select(:distributor_id, @distributors, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :machine_type %><br />
 	<%= f.select(:machine_type, @machine_types, {:prompt => 'Select Machine Type', :selected => @entry.machine_type }, :onchange => 'refreshMachineChoice(this);') %>
 		
 	<%= javascript_tag :defer => 'defer' do -%>
 			function refreshMachineChoice(select_tag) {
			var choice_tag = select_tag.value;
			if (choice_tag == "Server") 
			{
				<% @machines = Server.all%>
			} 
			else if (choice_tag == "Notebook") 
			{
				<% @machines = Notebook.all%>
			}
					
			alert(choice_tag);
			window.location.reload();
    } 
	<% end -%>
  </div>
  <div id="machine" class="field">
    <%= f.label "Machine" %><br />
    <%= f.collection_select(:machine_id, @machines, :id, :model, {:prompt => 'Select Machine'}) %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>